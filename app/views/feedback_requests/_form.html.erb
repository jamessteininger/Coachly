<%= form_for @feedback_request, :html => { :class => "form-horizontal feedback_request" } do |f| %>

    <% if @feedback_request.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@feedback_request.errors.count, "error") %> prohibited this feedback_request from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @feedback_request.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@feedback_request[:user_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :sender_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sender_id, :class => 'form-control' %>
    </div>
    <%= error_span(@feedback_request[:sender_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :prompt, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :prompt, :class => 'form-control' %>
    </div>
    <%= error_span(@feedback_request[:prompt]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            feedback_requests_path, :class => 'btn btn-default' %>

<% end %>
